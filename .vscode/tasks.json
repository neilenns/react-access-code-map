{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "dev",
      "label": "run client",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "base": "$ts-checker-webpack-watch",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "> vite",
            "endsPattern": "VITE v\\d+\\.\\d+\\.\\d+  ready in \\d+ ms$"
          }
        },
        {
          "base": "$ts-checker-eslint-webpack-watch",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Issues checking in progress...",
            "endsPattern": ".* issues found."
          }
        }
      ]
    },
    {
      "type": "npm",
      "script": "start:dev",
      "label": "run server",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "run server and client",
      "dependsOrder": "sequence",
      "dependsOn": ["run server", "run client"],
      "problemMatcher": []
    }
  ]
}
